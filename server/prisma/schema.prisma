generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  uuid         String    @id @default(uuid()) @unique
  email        String    @unique
  username     String
  password     String
  userPosts    Post[]
  userLikes    Like[]
  userComments Comment[]
  createdAt    DateTime  @default(now())
}

model Post {
  uuid         String    @id @default(uuid())
  author       User      @relation(fields: [authorUUID], references: [uuid])
  authorUUID   String
  text         String
  postLikes    Like[]
  postComments Comment[]
  createdAt    DateTime  @default(now())
}

model Like {
  uuid      String   @id @default(uuid())
  post      Post     @relation(fields: [postUUID], references: [uuid])
  postUUID  String
  user      User     @relation(fields: [userUUID], references: [uuid])
  userUUID  String
  createdAt DateTime @default(now())
}

model Comment {
  uuid      String   @id @default(uuid())
  post      Post     @relation(fields: [postUUID], references: [uuid])
  postUUID  String
  user      User     @relation(fields: [userUUID], references: [uuid])
  userUUID  String
  text      String
  createdAt DateTime @default(now())
}
